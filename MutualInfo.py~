#! /usr/bin/env python 

from sklearn import metrics
import json

def mutualScore(label1, label2):
    mutualScore = metrics.mutual_info_score(label1, label2)
    #print mutualScore

def main():
   features = []
   labels = []
   with open("data/output/histogram.json") as dataFile:
       data = json.load(dataFile)
       for item in data:
           features.append(item["histogram"])
           labels.append(item["rating"])
   
   features = [[row[i] for row in features] for i in range(2)]
   #print features
   #print labels
   for i in xrange(0,len(features)):
       print("feature " + str(i) + " score = " + str(mutualScore(features[i], labels)))       
       

if __name__ == "__main__":
    main()
 
